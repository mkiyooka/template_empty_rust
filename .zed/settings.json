{
    // ========================================
    // Remote Settings (Keep in repository)
    // - Source Code
    // - Terminal
    // - Tasks
    // - Language Servers
    // ========================================
    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "check": {
                    "command": "clippy",
                },
                "cargo": {
                    "allFeatures": true,
                },
                "procMacro": {
                    "enable": true,
                },
            },
        },
    },
    "languages": {
        "Rust": {
            "language_servers": ["rust-analyzer"],
            "format_on_save": "on",
        },
        "JSON": {
            "tab_size": 4,
            "format_on_save": "on",
        },
        "JSONC": {
            "tab_size": 4,
            "format_on_save": "on",
        },
        "TOML": {
            "format_on_save": "on",
            "formatter": "language_server",
        },
        "Markdown": {
            "format_on_save": "on",
            "formatter": "language_server",
        },
    },
    "file_scan_exclusions": [
        "**/.git",
        "**/.svn",
        "**/.hg",
        "**/.jj",
        "**/CVS",
        "**/.DS_Store",
        "**/Thumbs.db",
        "**/.classpath",
        "**/.settings",
    ],

